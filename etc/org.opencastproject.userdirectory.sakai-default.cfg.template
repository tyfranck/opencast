# Sakai UserDirectoryProvider configuration

# This is an an optional service which is not enabled by default. To enable it,
# edit etc/org.apache.karaf.features.cfg and add opencast-sakai to the featuresBoot option.

# The organization for this provider
org.opencastproject.userdirectory.sakai.org=mh_default_org

# The URL and login details for the Sakai server
org.opencastproject.userdirectory.sakai.url=https://trunk-mysql.nightly.sakaiproject.org/
org.opencastproject.userdirectory.sakai.user=admin
org.opencastproject.userdirectory.sakai.password=admin

# The maximum number of users to cache
#org.opencastproject.userdirectory.sakai.cache.size=1000

# The maximum number of minutes to cache a user
#org.opencastproject.userdirectory.sakai.cache.expiration=60

# Optional regexp for matching Sakai Site IDs (UUID).
#org.opencastproject.userdirectory.sakai.site.pattern=^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$

# Optional comma-separated list of Sakai roles which are mapped to Instructor role suffix in Opencast
#org.opencastproject.userdirectory.sakai.instructor.roles=Instructor,Site owner,maintain

